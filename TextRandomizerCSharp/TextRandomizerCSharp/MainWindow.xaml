<Window x:Class="TextRandomizerCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Randomizer" Height="350" Width="525" UseLayoutRounding="True">
    <DockPanel LastChildFill="True" Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" >
            <Button x:Name="RandomizeButton" Content="Randomize" Click="RandomizeButton_Click"/>
            <Button x:Name="SettingsButton" Content="Settings" Margin="10,0" Click="SettingsButton_Click"/>
        </StackPanel>
        <TextBox x:Name="Text" Margin="0,10,0,0" BorderBrush="#cccccc" BorderThickness="1" AcceptsReturn="True" TextWrapping="Wrap"/>
    </DockPanel>
</Window>
