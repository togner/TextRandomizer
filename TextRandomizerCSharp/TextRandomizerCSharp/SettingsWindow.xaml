<Window x:Class="TextRandomizerCSharp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="300" 
        Width="300"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <DockPanel LastChildFill="True" Background="#f0f0f0">
            <StackPanel DockPanel.Dock="Bottom" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,10">
                <Button x:Name="OkButton" Width="65" Content="_OK" Click="OkButton_Click" />
                <Button x:Name="CancelButton" Width="65" Margin="10,0,10,0" Content="_Cancel" IsCancel="True" />
            </StackPanel>

        <xctk:PropertyGrid x:Name="Properties" 
                       BorderThickness="0" 
                       ShowSearchBox="False"
                       ShowAdvancedOptions="False"
                       ShowSortOptions="False"
                       ShowSummary="False"
                       ShowTitle="False"/>
    </DockPanel>
</Window>
